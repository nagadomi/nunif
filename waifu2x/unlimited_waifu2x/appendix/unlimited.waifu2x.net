server {
       server_name unlimited.waifu2x.net;
       access_log	/var/log/nginx/unlimited.waifu2x.net.access.log;
       root   /home/nagadomi/nunif/waifu2x/unlimited_waifu2x/public_html;

       location ~ ^/(apple-touch-icon|browserconfig|mstile)(.*)\.(png|xml|ico)$ {
          return 204;
       }
       location / {
           add_header Cache-Control "public, max-age=3600, must-revalidate";
           # Enable multi-threading, see:
           # https://github.com/nagadomi/nunif/blob/bedce31ab9ec56568fe6149e108872e912301a70/waifu2x/unlimited_waifu2x/public_html/script.js#L679
           add_header Cross-Origin-Resource-Policy "cross-origin";
           add_header Cross-Origin-Embedder-Policy "require-corp";
           add_header Cross-Origin-Opener-Policy "same-origin";
       }
       location ~* \.(onnx|pth) {
           add_header Cache-Control "public, max-age=86400, must-revalidate";
       }
       location ~* \.wasm$ {
           types {
               application/wasm wasm;
           }
       }

       listen 80;
}
